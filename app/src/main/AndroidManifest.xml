<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wl.tabguidance">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ActivityOne"
            android:launchMode="singleTop"></activity>
        
        <activity android:name=".activity.ActivityTwo"
            android:launchMode="singleTop"></activity>

        <activity android:name=".activity.ActivityThree"
            android:launchMode="singleTop"></activity>
        <activity android:name=".activity.ActivityFour"
            android:launchMode="singleTop"></activity>
        <activity android:name=".activity.ActivityFive"></activity>
        <activity android:name=".activity.ActivitySix"></activity>
        <activity android:name=".activity.ActivitySeven"></activity>

        <activity android:name=".activity.home.HomePageActivity"
            android:theme="@style/HomeAppTheme"/>
        <activity android:name=".activity.home.TabLayoutHomePageActivity"
            android:theme="@style/HomeAppTheme"/>
    </application>

</manifest>