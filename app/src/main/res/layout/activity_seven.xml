<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_above="@+id/tab_activity_seven"
        android:id="@+id/container_seven"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

<!-- 要使用命名控件app给导航栏标题设置一些属性，否则运行时导航栏会显示为空 -->
    <com.flyco.tablayout.CommonTabLayout
        android:background="#ffffffff"
        android:layout_alignParentBottom="true"
        android:id="@+id/tab_activity_seven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"


        app:tl_iconHeight="23dp"
        app:tl_iconWidth="23dp"
        app:tl_indicator_color="#2C97DE"
        app:tl_indicator_height="0dp"
        app:tl_textSelectColor="#2C97DE"
        app:tl_textUnselectColor="#66000000"
        app:tl_textsize="12sp"
        app:tl_underline_color="#DDDDDD"
        app:tl_underline_height="1dp"
        ></com.flyco.tablayout.CommonTabLayout>
</RelativeLayout>